generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Event {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  fullName  String
  birthDate DateTime
  action    String
  date      DateTime

  aliases String[]
  isTerr  Boolean?
  address String?

  oldAliases String[]
  newAliases String[]
  oldIsTerr  Boolean?
  newIsTerr  Boolean?
  oldAddress String?
  newAddress String?

  @@map("events")  
}
